{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noErrorTruncation": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@orcha/angular": ["libs/angular/src/index.ts"],
      "@orcha/common": ["libs/common/src/index.ts"],
      "@orcha/mikro-orm": ["libs/mikro-orm/src/index.ts"],
      "@orcha/nestjs": ["libs/nestjs/src/index.ts"],
      "@orcha/testing": ["libs/testing/src/index.ts"],
      "@todo-example-app-lib/server": ["libs/todo-example-app-lib/src/server/index.ts"],
      "@todo-example-app-lib/shared": ["libs/todo-example-app-lib/src/shared/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
